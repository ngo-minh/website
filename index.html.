    <script>
        function typeText(targetId, text, delay = 50) {
            const targetElement = document.getElementById(targetId);
            let index = 0;

            function type() {
                if (index < text.length) {
                    targetElement.innerHTML += text.charAt(index);
                    index++;
                    setTimeout(type, delay);
                }
            }

            type();
        }

        // Call the function with your "About Me" text
        typeText("about-me-text", "I am a dedicated undergraduate specializing in data science, equipped with a robust skill set encompassing MySQL, Power BI, and Microsoft Excel. My academic background includes extensive coursework in statistical analysis and data visualization. With strong problem-solving capabilities, I would be a valuable asset as an intern in a data analysis team, aiming to make a meaningful contribution to your organization.", 20);
    </script>
